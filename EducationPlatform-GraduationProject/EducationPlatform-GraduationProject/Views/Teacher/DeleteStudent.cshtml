@section Head
{
    <link rel="stylesheet" href="~/css/DeleteStu.css">

}
  
<div style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);border-radius: 1.5rem; transition: 0.3s; width: 40%; margin-right: 30%; margin-top: 7rem;background-color: white">
    <div class="container" style="padding: 2px 16px;">
        <h1 style="text-align: center; text-shadow: 2px 2px 2px rgb(211, 217, 221);color: #1e6899;">
            هل أنت متأكد من حذف الطالب؟
        </h1>

        <div class="StudentInfo">
            <label style="font-weight:bold;">اسم الطالب / </label>
            <label class="userInfo">@Html.DisplayFor(model => model.StName)</label>
        </div>
        <hr>        
        
        <div class="StudentInfo">
            <label style="font-weight:bold;">رقم الهاتف / </label>
            <label class="userInfo">@Html.DisplayFor(model => model.Phone)</label>
        </div>
        <hr>
        <div class="StudentInfo">
            <label style="font-weight:bold;">العنوان / </label>
            <label class="userInfo">@Html.DisplayFor(model => model.Address)</label>
        </div>
        <hr>
        <div class="StudentInfo">
            <label style="font-weight:bold;">تاريخ التسجيل / </label>
            <label class="userInfo">@Html.DisplayFor(model => model.RegistedDate)</label>
        </div>
        <hr>
        <form asp-action="DeleteStudent">
            <input type="hidden" asp-for="StId" />
            <button type="submit" value="Delete" class="buttonClass">حذف الطالب</button>
        </form>
        <div class="bn40div">
            <a class="buttonClass" asp-action="GetAllStudent" asp-controller="Teacher" asp-route-id="@Model.ClassID">الرجوع</a>
        </div>
    </div>
</div>
