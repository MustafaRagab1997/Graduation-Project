@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container1">

    <div class="row">
        <div class="box">
            <h1>تسجيل الدخول</h1>
            <form id="account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Input.Email" class="label1">إسم المستخدم</label>
                <div class="divCss">
                    <i class="fa-solid fa-user"></i>
                    <input asp-for="Input.Email" class="inputCss" autocomplete="username" aria-required="true" placeholder=" إسم المستخدم" required />
                    @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                </div>
                <br />
                <label asp-for="Input.Password" class="label2">كلمة المرور</label>
                <div class="divCss">
                    <i class="fa-solid fa-lock"></i>
                    <input asp-for="Input.Password" class=" inputCss" autocomplete="current-password" aria-required="true" placeholder="كلمة المرور" required />
                    @*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="label2">

                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @*@Html.DisplayNameFor(m => m.Input.RememberMe)*@تذكرني ؟


                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary lgnBtn">تسجيل الدخول</button>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/79828b7d1d.js" crossorigin="anonymous"></script>

}   